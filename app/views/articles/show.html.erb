<div class="w-50 mx-auto mt-3">
  <div class="d-flex justify-content-center align-items-center gap-2">
    <h2 class="text-center"><%= @article.title %></h2>
    <%= link_to "<i class='fa-solid fa-pen-to-square'></i>".html_safe, edit_article_path(@article) %>
    <%= link_to "<i class='fa-solid fa-trash'></i>".html_safe, article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
  <hr>

  <p class="text-justify"><%= @article.content %></p>
  <h5><%= link_to "Back", articles_path %></h5>
</div>


